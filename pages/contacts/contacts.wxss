/* pages/contacts/contacts.wxss */
.container {
    width: 100vw;
    height: 100vh;
    overflow: scroll;
    overflow-x: scroll;
    overflow-y: hidden;
    /*解决ios上滑动不流畅*/
    -webkit-overflow-scrolling: touch;
    background-color: #f1f1f1;
  }

  .tab {
      width: 100vw;
      height: 80rpx;
      background-color: #fff;
  }
  .tab-item {
      flex: 1;
      font-size: 28rpx;
      color: #2c2c2c;
  }
  .tab-item-v{
      border-bottom: 2px solid #ffffff;
  }
  .se {
    border-bottom: 2px solid #62b900;
  }
  .list{
    margin-top: 4rpx;
  }
  .list-item {
      padding: 10rpx 20rpx;
      margin-bottom: 4rpx;
      background-color: #fff;
  }
  .list-item-pic{
      margin-right: 20rpx;
      width: 80rpx;
      height: 80rpx;
  }
  .list-item-pic image{
      display: block;
      width: 80rpx;
      height: 80rpx;
  }
  .list-item-title {
      font-size: 26rpx;
      color: #2c2c2c;
  }